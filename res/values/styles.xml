    </style>
        <style name="LifeCounterLandLarge">
        <item name="android:shadowColor">#FFFFFF</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textSize">172sp</item>
        <item name="android:textColor">#00ff00</item>
        <item name="android:freezesText">true</item>
    </style>
    <style name="CounterButton">
        <item name="android:textSize">32sp</item>
        <item name="android:height">64dp</item>
        <item name="android:width">64dp</item>
        <item name="android:onClick">onClick</item>
    </style>
        <style name="CounterButtonLarge">
        <item name="android:textSize">44sp</item>
        <item name="android:height">92dp</item>
        <item name="android:width">92dp</item>
        <item name="android:onClick">onClick</item>
    </style>
        <style name="CounterButtonXL">
        <item name="android:textSize">64sp</item>
        <item name="android:height">128dp</item>
        <item name="android:width">128dp</item>
        <item name="android:onClick">onClick</item>
    </style>
	<style name="log">
	   	<item name="android:textColor">#FFFFFF</item> 
	   	<item name="android:textSize">32sp</item>
        <item name="android:freezesText">true</item>
	</style>
	<style name="logS">
	   	<item name="android:textColor">#FFFFFF</item> 
	   	<item name="android:textSize">17sp</item>
